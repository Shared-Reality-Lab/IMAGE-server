{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/renderers/segmentaudiohaptic.schema.json",
    "title": "Segment Audio Haptic Renderer",
    "type": "object",
    "description": "Data for basic audio selection renderer ca.mcgill.a11y.image.renderer.SegmentAudioHaptic.",
    "properties": {
        "image": {
            "type": "string"
        },
        "audioFile": {
            "$ref": "./definitions.json#/definitions/audioFile"
        },
        "audioInfo": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "./definitions.json#/definitions/segmentOffsetSeconds"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "description": "A short name assigned to the segment.",
                                "type": "string",
                                "maxLength": 300
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                ]
            }
        },
        "hapticInfo": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "type": "object",
                        "properties": {
                            "text": {
                                "type": "string"
                            },
                            "centroids": {
                                "type": "array",
                                "items": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 1
                                },
                                "minItems": 2,
                                "maxItems": 2
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 1   
                                }
                            }                            
                        }
                    },

                    {
                        "type": "object",
                        "properties": {
                            "text": {
                                "type": "string"
                            },
                            "coordinates": {
                                "type": "array",
                                "items": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 1   
                                }
                            } 
                        }  

                    }
                ]
            }
        }
    },
    "required": [
        "audioFile",
        "audioInfo",
        "hapticInfo"
    ]
}