{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/renderers/photoaudiohaptics.schema.json",
    "title": "Photo Audio Haptic Renderer",
    "type": "object",
    "description": "Data for basic audio haptics selection renderer ca.mcgill.a11y.image.renderer.PhotoAudioHaptics.",
    "definitions": {
        "centroid": {
            "type": "array",
            "description": "The normalized geometric center of the entity.",
            "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
            },
            "minItems": 2,
            "maxItems": 2
        },
        "coordinates": {
            "type": "array",
            "description": "The normalized coordinates for each entity.",
            "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
            }
        },
        "contourPoints": {
            "type": "array",
            "description": "An array containing an array of normalized coordinates representing a point on the segment or point on the bounding box.",
            "items": {
                "$ref": "#/definitions/coordinates"
            }
        }
    },
    "properties": {
        "graphic": {
            "type": "string",
            "description": "A base64 encoding of the graphic as a string.",
            "pattern": "data:graphic\/[^;]+;base64[^\"]+"
        },
        "info": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "object",
                    "properties": {
                        "audioFile": {
                            "$ref": "./definitions.json#/definitions/audioFile"
                        },
                        "entityInfo": {
                            "type": "array",
                            "description":  "An entity contains the relevant audio-haptic information to locate each segment or object.",
                            "items": {
                                "allOf": [
                                    {
                                        "$ref": "./definitions.json#/definitions/segmentOffsetSeconds"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "description": "A short name assigned to the entity.",
                                                "type": "string",
                                                "maxLength": 100
                                            }
                                        },
                                        "required": [
                                            "name"
                                        ]
                                    },
                                    {
                                        "$ref": "#/definitions/centroid"
                                    },
                                    {
                                        "$ref": "#/definitions/contourPoints"
                                    },
                                    {
                                        "entityType":{
                                            "type": "string",
                                            "description": "a description of entity type; segment, object, or static text"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        }
    },
    "required": ["info"]
}