{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/chart-information.schema.json",
    "type": "object",
    "title": "Chart information",
    "description": "Information and datapoints extracted from the given chart",
    "definitions": {
        "label": {
            "description": "Info about the label",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "A number identifying this label in the set",
                    "type": "integer"
                },
                "text": {
                    "description": "The name/text of label",
                    "type": "string"
                },
                "coords": {
                    "description": "The ulx, uly, lrx, and lry normalized from 0 to 1",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 4,
                    "maxItems": 4
                },
                "centroid": {
                    "description": "The centroid of the bounding box in normalized coordinates",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 2,
                    "maxItems": 2
                },
                "area": {
                    "description": "The area of the image that is filled by the label",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": [ "ID", "text", "coords", "centroid", "area" ]
        }, 
        "peakdip": {
            "description": "Info about the peak or dip",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "A number identifying this peak/dip in the set",
                    "type": "integer"
                },
                "x_label": {
                    "description": "x label associated with the peak/dip",
                    "type": "string"
                },
                "value": {
                    "description": "The Y axis value at the peak/dip",
                    "type": "number"
                },
                "coords": {
                    "description": "The x, y coordinates of the peak/dip normalized from 0 to 1",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 2,
                    "maxItems": 2
                }
            },
            "required": [ "ID", "x_label", "value", "coords" ]
        },
        "bar": {
            "description": "Info about each bar",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "A number identifying this bar in the set",
                    "type": "integer"
                },
                "x_label": {
                    "description": "x label associated with the bar",
                    "type": "string"
                },
                "value": {
                    "description": "Value represented by the bar in the chart",
                    "type": "number"
                },
                "coords": {
                    "description": "Bounding box of the bar, with coordinates normalized from 0 to 1",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 4,
                    "maxItems": 4
                },
                "centroid": {
                    "description": "Centroid of the bar, normalized from 0 to 1",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 2,
                    "maxItems": 2
                },
                "area": {
                    "description": "Area occupied by the bar, normalized from 0 to 1",
                    "type": "number"
                }
            },
            "required": [ "ID", "x_label", "value", "coords", "centroid", "area" ]
        },
        "sector": {
            "description": "Info about each sector in the pie chart",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "A number identifying this sector in the set",
                    "type": "integer"
                },
                "value": {
                    "description": "Value in percentage represented by the sector",
                    "type": "number"
                },
                "center": {
                    "description": "Coordinates of the sector center, normalized from 0 to 1",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0, "maximum": 1 },
                        { "type": "number", "minimum": 0, "maximum": 1 }
                    ],
                    "additionalItems": false,
                    "minItems": 2,
                    "maxItems": 2
                },
                "arc_coords": {
                    "description": "Coordinates of the start and end point of the sector arc, normalized from 0 to 1",
                    "type": "object",
                    "properties": {
                        "start": {
                            "type": "array",
                            "items": [
                                { "type": "number", "minimum": 0, "maximum": 1 },
                                { "type": "number", "minimum": 0, "maximum": 1 }
                            ],
                            "additionalItems": false,
                            "minItems": 2,
                            "maxItems": 2
                        },
                        "end": {
                            "type": "array",
                            "items": [
                                { "type": "number", "minimum": 0, "maximum": 1 },
                                { "type": "number", "minimum": 0, "maximum": 1 }
                            ],
                            "additionalItems": false,
                            "minItems": 2,
                            "maxItems": 2
                        }
                    },
                    "required": [ "start", "end" ]
                }
            },
            "required": [ "ID", "value", "center", "arc_coords" ]
        }
    },

    "properties": {
        "type": {
            "description": "Type of chart: Line/Bar/Pie",
            "enum": ["line", "bar", "pie"]
        },
        "dimensions": {
            "description": "Image dimensions in pixels (h, w)",
            "type": "array",
            "items": [
                { "type": "integer" },
                { "type": "integer" }
            ],
            "additionalItems": false
        },
        "title": {
            "description": "Title of the chart",
            "type": ["string"]
        },
        "y_range": {
            "description": "Range of values on the Y axis",
            "type": "object",
            "properties": {
                "min": { "type": "string" },
                "max": { "type": "string" }
            }
        },
        "x_labels": {
            "description": "Labels on the X-axis",
            "type": "array",
            "items": {
                "$ref": "#/definitions/label"
            }
        },
        "peaks": {
            "description": "Info about the detected peaks",
            "type": "array",
            "items": {
                "$ref": "#/definitions/peakdip"
            }
        },
        "dips": {
            "description": "Info about the detected dips",
            "type": "array",
            "items": {
                "$ref": "#/definitions/peakdip"
            }
        },
        "sectors": {
            "description": "Info about the detected bars",
            "type": "array",
            "items": {
                "$ref": "#/definitions/sector"
            }
        },
        "bars": {
            "description": "Info about the detected bars",
            "type": "array",
            "items": {
                "$ref": "#/definitions/bar"
            }
        }
    },
    "required": ["type", "title", "dimensions","y_range","x_labels","peaks","dips", "sectors","bars"],
    "oneOf": [
        {
            "required": ["y_range", "x_labels", "peaks", "dips","type","title","dimensions"],
            "not": {
                "anyOf": [ {"required": ["bars"]}, {"required": ["sectors"]} ]
            }
        },
        {
            "required": ["y_range", "x_labels", "bars","type","title","dimensions"],
            "not": {
                "anyOf": [ {"required": ["peaks"]}, {"required": ["dips"]}, {"required": ["sectors"]} ]
            }
        },
        {
            "required": ["sectors","type","title","dimensions"],
            "not": {
                "anyOf": [ {"required": ["y_range"]}, {"required": ["x_labels"]}, {"required": ["peaks"]}, {"required": ["dips"]}, {"required": ["bars"]} ]
            }
        }
    ]
}