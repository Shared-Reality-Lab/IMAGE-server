{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://bach.cim.mcgill.ca/atp/preprocessors/grouping.schema.json",
    "type": "object",
    "title": "Segmentation Data",
    "description": "JSON contaiing pixel coordinates of different segments in an image",
    "properties": {
        "segments":{
            "type":"array",
            "description":"Contains a collection of different types of segments and their associated pixel values in an image",
            "items":{
            "type": "object",
            "description":"Pixel coordinates of different segments in an image, normalised between 0 and 1",
            "properties": {
                "nameOfSegment":{ "type": "string" },
                "coord":{
                    "type":"array",
                    "items": {
                        "type":"array",
                        "items":{
                            "type":"number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    },
                    "minItems": 2,
                    "maxItems": 2
                }
            }
            
            },
            "required": ["coord","nameOfSegment"]
        }
    },
    "required": ["segments"]
}
