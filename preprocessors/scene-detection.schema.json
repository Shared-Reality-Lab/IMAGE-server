{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/scene-detection.schema.json",
    "type": "object",
    "title": "Scene Detection Data",
    "description": "Information relating to the scene.",
    "properties": {
        "type": {
            "description": "An indication whether or not the scene is indoor or outdoor.",
            "type": "string",
            "enum": [ "indoor", "outdoor" ]
        },
        "categories": {
            "description": "Categories of scene detected in the photograph.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "The category name of the scene.",
                        "type": "string"
                    },
                    "confidence": {
                        "description": "Confidence that this scene is present in the photograph.",
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                    }
                },
                "required": [ "name", "confidence" ]
            }
        },
        "attributes": {
            "description": "Text attributes describing the photograph and scene therein.",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [ "type", "categories", "attributes" ]
}
