{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://bach.cim.mcgill.ca/atp/preprocessors/object-detection.schema.json",
    "type": "object",
    "title": "Object Detection Data",
    "description": "Detected objects and related information.",
    "definitions": {
        "object": {
            "type": "object",
            "properties": {
                "ID": {
                    "description": "A number identifying this object in the set.",
                    "type": "integer"
                },
                "type": {
                    "description": "The type of object detected.",
                    "type": "string"
                },
                "dimensions": {
                    "description": "The ulx, uly, lrx, and lry in pixels.",
                    "type": "array",
                    "items": [
                        { "type": "number", "minimum": 0 },
                        { "type": "number", "minimum": 0 },
                        { "type": "number", "minimum": 0 },
                        { "type": "number", "minimum": 0 }
                    ],
                    "additionalItems": false,
                    "minItems": 4,
                    "maxItems": 4
                },
                "confidence": {
                    "description": "Confidence in the correctness of this object's data as a percentage.",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "required": [ "ID", "type", "dimensions", "confidence" ]
        }
    },
    "properties": {
        "objects": {
            "description": "The set of objects detected in the image.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/object"
            }
        }
    },
    "required": [ "objects" ]
}
