{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/emotion-recognition.schema.json",
    "type": "object",
    "title": "Emotion Recognition Data",
    "description": "The emotion, gender and age of the person",
    "properties": {
        "emotion_age_gender": {
            "description": "The information regarding the age, gender and emotion of the person",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ObjectID": {
                        "description": "The ID of a person. The ID is generated by object detection preprocessor and is reused in this preprocessor",
                        "type": "number"
                    },
                    "emotion": {
                        "description": "Possible emotion for a person",
                        "type": "object",
                        "properties": {
                            "emotion": {
                                "type": "string"
                            },
                            "confidence": {
                                "type": "number"
                            }
                        }
                    },
                    "gender": {
                        "description": "Possible gender of the person",
                        "type": "object",
                        "properties": {
                            "gender": {
                                "type": "string"
                            },
                            "confidence": {
                                "type": "number"
                            }
                        }
                    },
                    "age":{
                        "description": "Possible age of the person",
                        "type": "object",
                        "properties": {
                            "age": {
                                "type": "number"
                            },
                            "confidence": {
                                "type": "number"
                            }
                        }
                    }
                },
                "required": ["ObjectID", "emotion"]
            }
        }
    },
    "required": ["emotion_age_gender"]
}