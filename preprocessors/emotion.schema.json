{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/emotion-recognition.schema.json",
    "type": "object",
    "title": "Emotion Recognition Data",
    "description": "The emotion, gender and age of the person. The associated information can be found in preprocessor named 'ca.mcgill.a11y.image.preprocessor.emotionDetector'.",
    "properties": {
        "person_emotion": {
            "description": "Contains a list of persons with emotions as detected by ca.mcgill.a11y.image.preprocessor.emotionDetector",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "personID": {
                        "description": "The ID of a person. The ID is generated by object detection preprocessor and is reused in this preprocessor",
                        "type": "number"
                    },
                    "emotion": {
                        "description": "Possible emotion for a person. The current preprocessor generates only three values: happy, neutral or sad",
                        "type": "object",
                        "properties": {
                            "emotion": {
                                "type": "string"
                            },
                            "confidence": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            }
                        }
                    },
                    "gender": {
                        "description": "Possible gender of the person. The gender can be either male or female",
                        "type": "object",
                        "properties": {
                            "gender": {
                                "enum": ["male", "female"]
                            },
                            "confidence": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            }
                        }
                    },
                    "age":{
                        "description": "Possible age of the person",
                        "type": "object",
                        "properties": {
                            "age": {
                                "type": "number",
                                "minimum": 0
                            },
                            "confidence": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            }
                        }
                    }
                },
                "required": ["personID", "emotion"]
            }
        }
    },
    "required": ["person_emotion"]
}