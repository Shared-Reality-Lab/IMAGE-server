{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/ocr.schema.json",
    "type": "object",
    "title": "OCR preprocessor",
    "description": "Retreives the lines of text and their corresponding bounding boxes found in an image",
    "properties": {
        "lines": {
            "type": "array",
            "title": "Lines",
            "description": "The lines of text found in an image",
            "items": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string",
                        "title": "Text",
                        "description": "Text contained within the line"
                    },
                    "bounding_box": {
                        "type": "array",
                        "title": "Bounding box",
                        "description": "The bounding box of the text in pixels: [X-TL, Y-TL, X-TR, Y-TR, X-BR, Y-BR, X-BL, Y-BL]",
                        "minItems": 8,
                        "maxItems": 8,
                        "items": {
                            "type": "integer"
                        }
                    }
                },
                "required": ["text", "bounding_box"]
            }
        }
    },
    "required": ["lines"]
}
