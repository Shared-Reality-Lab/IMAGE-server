{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/preprocessors/ocr.schema.json",
    "type": "object",
    "title": "OCR preprocessor",
    "description": "Retreives the lines of text and their corresponding bounding boxes found in a photograph",
    "properties": {
        "lines": {
            "type": "array",
            "title": "Lines",
            "description": "The lines of text found in a photograph",
            "items": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string",
                        "title": "Text",
                        "description": "Text contained within the line"
                    },
                    "bounding_box": {
                        "type": "array",
                        "title": "Bounding box",
                        "description": "The normalized bounding box of the text: [X-TL, Y-TL, X-BL, Y-BL]",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    }
                },
                "required": ["text", "bounding_box"]
            }
        }
    },
    "required": ["lines"]
}
