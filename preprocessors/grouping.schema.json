{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://bach.cim.mcgill.ca/atp/preprocessors/grouping.schema.json",
    "type": "object",
    "title": "Grouping Data",
    "description": "Grouped data for objects",
    "properties": {
        "grouped": {
            "description": "An array of indices of objects having a similar property with other objects",
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties":{
                        "IDs": {"type":"integer"},
                    }
                }
            }
        },
        "ungrouped": {
            "description": "An array of indices of objects which do not have a common property with any other object",
            "type": "array",
            "items": {
                "type": "number"
            }
        }
    },
    "required": ["grouped", "ungrouped"]
}
