{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://image.a11y.mcgill.ca/framing/frames/frame.schema.json",
    "type": "object",
    "title": "Generic Frame",
    "description": "Prototype of an abstracted frame that has one or more objects.",
    "properties": {
        "name": {
            "allOf": [
                { "description": "A unique identifier for this type of frame." },
                { "$ref": "../characteristics/characteristic.schema.json#/definitions/reverseDNS" }
            ]
        },
        "objects": {
            "type": "array",
            "description": "The set of objects to display.",
            "items": { "$ref": "../objects/object.schema.json" }
        }
    },
    "required": [ "name", "objects" ]
}
